<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaspalhayer.quicklist.ViewListingActivity">

    <TextView
        android:id="@+id/view_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view_title_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="25dp"
        android:layout_alignTop="@id/view_title_text"
        android:src="@drawable/title_icon" />

    <TextView
        android:id="@+id/view_author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_title_text"
        android:layout_alignStart="@id/view_title_text"
        android:layout_marginTop="25dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view_author_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@id/view_author_text"
        android:layout_marginLeft="25dp"
        android:src="@drawable/author_icon" />


    <TextView
        android:id="@+id/view_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_author_text"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#757575"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/view_year_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/year_icon" />


    <ImageView
        android:id="@+id/view_isbn_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/isbn_icon" />

    <TextView
        android:id="@+id/view_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/view_title_text"
        android:layout_alignTop="@id/view_isbn_icon"
        android:layout_below="@id/view_year_text"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#757575"
        android:textSize="16sp" />


    <!-- Footer Layout -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey">

        <Button
            android:id="@+id/message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimary"
            android:shadowColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/view_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="Â£10"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/desc_icon" />
    </RelativeLayout>


</RelativeLayout>
