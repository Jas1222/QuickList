<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_scroll">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.jaspalhayer.quicklist.ViewListingActivity">

            <TextView
                android:id="@+id/view_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view_title_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/view_title_text"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/title_icon" />

            <TextView
                android:id="@+id/view_author_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/view_title_text"
                android:layout_below="@id/view_title_text"
                android:layout_marginTop="25dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view_author_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/view_author_text"
                android:layout_marginLeft="25dp"
                android:src="@drawable/author_icon" />


            <TextView
                android:id="@+id/view_year_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/view_author_text"
                android:layout_below="@id/view_author_text"
                android:layout_marginTop="25dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view_year_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/view_year_text"
                android:layout_marginLeft="25dp"
                android:src="@drawable/year_icon" />

            <TextView
                android:id="@+id/view_isbn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/view_year_text"
                android:layout_below="@id/view_year_text"
                android:layout_marginTop="25dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#757575"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/view_isbn_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@id/view_isbn_text"
                android:layout_marginLeft="25dp"
                android:src="@drawable/isbn_icon" />


            <TextView
                android:id="@+id/view_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/view_isbn_text"
                android:layout_below="@id/view_isbn_text"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="120dp"
                android:text="Small Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/view_desc_text"
                android:layout_marginLeft="25dp"
                android:src="@drawable/desc_icon" />
        </RelativeLayout>
    </ScrollView>

    <!-- Footer Layout -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_message_button"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/create_description_field"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="#E91E63"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="6dp">

            <TextView
                android:id="@+id/view_card_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF"
                android:textSize="19sp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Message "
                android:fontFamily="sans-serif-medium" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/view_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="Â£10"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
