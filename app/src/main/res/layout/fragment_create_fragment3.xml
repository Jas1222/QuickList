<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaspalhayer.quicklist.CreateFragment3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step 3"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:id="@+id/create_header_3"
        android:textSize="40sp"
        android:textColor="@color/colorAlt"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Review your listing"
        android:gravity="center_horizontal"
        android:id="@+id/create_subheader_3"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorAlt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/create_header_3"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Book"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_subheader_3"
        android:id="@+id/create_book_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Title:"
        android:layout_marginTop="60dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_subheader_3"
        android:id="@+id/create_book_title_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Author:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_book_title_label"
        android:id="@+id/create_book_author_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Year:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_book_author_label"
        android:id="@+id/create_book_year_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="ISBN:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_book_year_label"
        android:id="@+id/create_book_isbn_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Price:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_book_isbn_label"
        android:id="@+id/create_book_price_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Description:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_book_price_label"
        android:id="@+id/create_book_description_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Degree"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_book_description_label"
        android:id="@+id/create_degree_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Type:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_degree_label"
        android:id="@+id/create_degree_type_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Year:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_degree_type_label"
        android:id="@+id/create_degree_year_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Course:"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/create_degree_year_label"
        android:id="@+id/create_degree_course_label"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_next_3_btn"
        android:layout_below="@+id/create_degree_course_label"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="#E91E63"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <TextView
            android:id="@+id/material_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:textSize="19sp"
            android:fontFamily="sans-serif-medium"
            android:text="Confirm and Submit" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>