<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateBookInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step 1"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/create_header_2"
        android:textSize="40sp"
        android:textColor="@color/colorAlt"
        android:layout_centerHorizontal="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Enter the book details"
    android:gravity="center_horizontal"
    android:id="@+id/create_subheader_2"
    android:layout_marginTop="10dp"
    android:textColor="@color/colorAlt"
    android:layout_marginBottom="60dp"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/create_header_2"/>


    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="What is the book title?"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="20dp"
    android:layout_below="@id/create_subheader_2"
    android:id="@+id/create_book_title_field"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_icon"
        android:layout_alignBottom="@id/create_book_title_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Who are the book authors?"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_book_title_field"
        android:layout_marginTop="5dp"
        android:id="@+id/create_book_author_field"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/author_icon"
        android:layout_alignBottom="@id/create_book_author_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What year was the book published?"
        android:layout_marginLeft="50dp"
        android:inputType="number"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_book_author_field"
        android:layout_marginTop="5dp"
        android:maxLength="4"
        android:id="@+id/create_book_year_field"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/year_icon"
        android:layout_alignBottom="@id/create_book_year_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What is the book ISBN?"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:maxLength="13"
        android:inputType="number"
        android:layout_below="@id/create_book_year_field"
        android:layout_marginTop="5dp"
        android:id="@+id/create_ISBN_field"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/year_icon"
        android:layout_alignBottom="@id/create_book_year_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tap to enter the desired price"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_ISBN_field"
        android:layout_marginTop="5dp"
        android:maxLength="4"
        android:inputType="numberDecimal"
        android:id="@+id/create_book_price_field"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/create_isbn"
        android:layout_alignBottom="@id/create_ISBN_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pound_icon"
        android:layout_alignBottom="@id/create_book_price_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Short description about condition"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/create_book_price_field"
        android:layout_marginTop="5dp"
        android:id="@+id/create_description_field"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/desc_icon"
        android:layout_alignBottom="@id/create_description_field"
        android:paddingBottom="8dp"
        android:layout_marginLeft="20dp"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_next_2_btn"
        android:layout_below="@+id/create_description_field"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardBackgroundColor="#E91E63"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <TextView
            android:id="@+id/material_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFF"
            android:textSize="19sp"
            android:fontFamily="sans-serif-medium"
            android:text="Next" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>