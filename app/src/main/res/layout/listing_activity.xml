<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/titleIcon"
            android:src="@drawable/title_icon"
            android:layout_alignTop="@+id/sIsbn"
            android:layout_toStartOf="@+id/sIsbn"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sIsbn"
            android:hint="What is the book title?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:maxLength="120"
            android:layout_marginTop="49dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <!-- Author Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/author_icon"
            android:src="@drawable/author_icon"
            android:layout_alignTop="@+id/authorText"
            android:layout_marginTop="15dip"
            android:layout_alignStart="@+id/titleIcon"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorText"
            android:hint="Who are the book authors?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/sIsbn"
            android:layout_alignStart="@+id/sIsbn"
            android:maxLength="120"/>

        <!-- Year Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/year_icon"
            android:src="@drawable/year_icon"
            android:layout_marginBottom="8dip"
            android:layout_alignBottom="@+id/yearText"
            android:layout_alignStart="@+id/author_icon" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearText"
            android:hint="What year was the book published?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_marginTop="5dip"
            android:layout_below="@+id/authorText"
            android:layout_alignTop="@id/yearText"
            android:layout_alignStart="@+id/authorText"
            android:maxLength="4"
            android:inputType="number"/>

        <!-- Description Icon -->
        <ImageView
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:id="@+id/descIcon"
            android:src="@drawable/desc_icon"
            android:layout_alignBottom="@+id/descText"
            android:layout_alignEnd="@+id/year_icon"
            android:layout_marginBottom="8dip"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descText"
            android:hint="Tap to enter a short description"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_below="@+id/yearText"
            android:layout_alignStart="@+id/yearText"
            android:layout_marginTop="5dip"
            android:maxLength="250"/>


        <!-- Rectangle footer -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/grey_rectangle"
            android:layout_height="70dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceText"
                android:textColor="@color/colorPrimary"
                android:maxLength="6"
                android:layout_marginLeft="48dip"
                android:textSize="25dip"
                android:textStyle="bold"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Â£"
                android:textSize="30dip"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:id="@+id/poundSymbol"
                android:layout_marginStart="28dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="Make Listing"
            android:id="@+id/makeListingBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/descText"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:shadowColor="@color/colorPrimaryDark"/>
    </RelativeLayout>
</LinearLayout>