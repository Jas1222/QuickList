<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/titleIcon"
            android:src="@drawable/title_icon"
            android:layout_alignLeft="@+id/titleText" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:hint="What is the book title?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp" />

        <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/authorText"
        android:hint="Who are the book authors?"
        android:minWidth="320dip"
        android:maxWidth="320dip"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/titleText"
            android:layout_alignStart="@+id/titleText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearText"
            android:hint="What year was the book published?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/authorText"
            android:layout_alignStart="@+id/authorText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descText"
            android:hint="Tap to enter a description"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_below="@+id/yearText"
            android:layout_alignStart="@+id/yearText"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Listing"
            android:id="@+id/makeListingBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/descText"
            android:layout_marginBottom="10dp" />


    </RelativeLayout>
</LinearLayout>