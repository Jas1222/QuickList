<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Title Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/titleIcon"
            android:src="@drawable/title_icon"
            android:layout_alignTop="@+id/titleText"
            android:layout_toStartOf="@+id/titleText"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="15dp" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleText"
            android:hint="What is the book title?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:maxLength="120"/>

        <!-- Author Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/author_icon"
            android:src="@drawable/author_icon"
            android:layout_alignTop="@+id/authorText"
            android:layout_marginTop="15dip"
            android:layout_alignStart="@+id/titleIcon"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorText"
            android:hint="Who are the book authors?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/titleText"
            android:layout_alignStart="@+id/titleText"
            android:maxLength="120"/>

        <!-- Year Icon -->
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:id="@+id/year_icon"
            android:src="@drawable/year_icon"
            android:layout_below="@+id/author_icon"
            android:layout_alignRight="@+id/author_icon"
            android:layout_alignBottom="@+id/yearText"
            android:layout_marginTop="30dip"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearText"
            android:hint="What year was the book published?"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/authorText"
            android:layout_alignStart="@+id/authorText"
            android:maxLength="4"
            android:inputType="number"/>

        <!-- Description Icon -->
        <ImageView
            android:layout_width="18dip"
            android:layout_height="18dip"
            android:id="@+id/descIcon"
            android:src="@drawable/desc_icon"
            android:layout_below="@+id/year_icon"
            android:layout_alignRight="@+id/year_icon"
            android:layout_alignBottom="@+id/descText"
            android:layout_marginTop="25dip"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descText"
            android:hint="Tap to enter a short description"
            android:minWidth="320dip"
            android:maxWidth="320dip"
            android:layout_below="@+id/yearText"
            android:layout_alignStart="@+id/yearText"
            android:layout_marginTop="8dp"
            android:maxLength="250"/>


        <!-- Rectangle background -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/grey_rectangle"
            android:layout_height="70dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceText"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="false" />
        </RelativeLayout>

        <Button
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="Make Listing"
            android:id="@+id/makeListingBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/descText"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:shadowColor="@color/colorPrimaryDark"/>
    </RelativeLayout>
</LinearLayout>