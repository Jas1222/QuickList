<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="2dp" >

    <TextView
        android:id="@+id/book_title"
        android:maxLines="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:text="txt"
        android:maxWidth="250dp"
        android:textStyle="bold"
        android:textColor="@color/colorAlt"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/book_title"
        android:layout_below="@+id/book_title"
        android:text="txt"
        android:textColor="@color/colorAlt2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â£"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="25dp"
        android:paddingBottom="10dp"
        android:layout_alignTop="@+id/book_title"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="txt"
        android:textSize="12sp"
        android:layout_alignTop="@+id/author_text"
        android:layout_alignStart="@+id/price_text" />

</RelativeLayout>